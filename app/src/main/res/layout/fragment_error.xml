<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Error">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/error"
        android:clipToOutline="true" />

    <View
        android:id="@+id/home_indica"
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/home_indica"
        />

    <TextView
        android:id="@+id/page_tittle"
        android:layout_width="222dp"
        android:layout_height="24dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="55dp"
        android:gravity="center_horizontal|top"
        android:text="Error"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/arrow_left" />
    <ImageView
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"

        android:layout_below="@id/page_tittle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:src="@drawable/vector_2" />

    <Button
        android:id="@+id/my_button"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="205dp"
        android:background="@drawable/retry_button_backround"

        android:gravity="center"
        android:text="Retry"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="376dp"
        android:src="@drawable/logo5" />

    <TextView
        android:id="@+id/ops_somethi"
        android:layout_width="287dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="328dp"
        android:gravity="center_horizontal|top"
        android:text="Ops! Something Went Wrong"
        android:textAppearance="@style/ops_somethi" />

    <TextView
        android:id="@+id/please_chec"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="286dp"
        android:gravity="center_horizontal|top"
        android:text="Please check your internet connection and try again"
        android:textAppearance="@style/please_chec" />


</RelativeLayout>