<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingsFragment">

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/settings"
        android:clipToOutline="true">
        <View
            android:id="@+id/home_indica"
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/home_indica"
            />

        <TextView
            android:id="@+id/page_tittle"
            android:layout_width="222dp"
            android:layout_height="24dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="55dp"
            android:gravity="center_horizontal|top"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"

            android:layout_below="@id/page_tittle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/vector_2" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/arrow_left" />

        <View
            android:id="@+id/fill_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-4dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="345dp"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="30dp"
            android:text="Log out"
            android:textColor="#F77A55"
            android:background="@drawable/buttonsetiing"


            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_deta"
        android:layout_width="375dp"
        android:layout_height="88dp"
        android:layout_below="@id/settings"
        android:background="@drawable/header_deta" />

    <View
        android:id="@+id/more_square"
        android:layout_width="11.35dp"
        android:layout_height="2.39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.32dp"
        android:layout_marginTop="10.8dp"
        android:background="#00000000"

        />


</RelativeLayout>

